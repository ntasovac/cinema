src/
│── app/
│   │── core/             # Globalni servisi, modeli i konfiguracije
│   │   ├── services/      # Aplikacioni servisi (e.g., auth.service.ts, api.service.ts)
│   │   ├── models/        # Globalni interfejsi i modeli (e.g., user.model.ts, movie.model.ts)
│   │   ├── interceptors/  # HTTP interceptori (e.g., auth.interceptor.ts)
│   │   ├── guards/        # Route guards (e.g., auth.guard.ts)
│   │   ├── utils/         # Pomoćne funkcije (e.g., date.util.ts)
│   │
│   │── shared/            # Ponovno upotrebljivi delovi aplikacije
│   │   ├── components/    # Reusable komponente (e.g., navbar/, rating-stars/)
│   │   ├── directives/    # Direktive (e.g., highlight.directive.ts)
│   │   ├── pipes/         # Filteri i cevi (e.g., duration.pipe.ts)
│   │
│   │── features/          # Pojedinačni moduli aplikacije
│   │   ├── movies/        # Modul za filmove
│   │   │   ├── components/  # Komponente specifične za filmove (e.g., movie-card/, movie-list/)
│   │   │   ├── services/    # Servisi za filmove (e.g., movie.service.ts)
│   │   │   ├── models/      # Modeli za filmove (e.g., movie.model.ts)
│   │   │   ├── store/       # NGRX store (ako koristiš state management)
│   │   │   ├── pages/       # Stranice (e.g., movie-details.component.ts)
│   │   │
│   │   ├── auth/          # Modul za autentifikaciju (e.g., login/, register/)
│   │   ├── users/         # Modul za korisnike (e.g., profile/, user-list/)
│   │   ├── tickets/       # Modul za kupovinu karata
│   │
│   │── styles/            # Globalni SCSS stilovi
│   │   ├── utils/         # Pomoćni stilovi (e.g., _variables.scss, _mixins.scss)
│   │   ├── base/          # Reset, tipografija
│   │   ├── components/    # Stilovi komponenti (e.g., _buttons.scss)
│   │   ├── layouts/       # Stilovi za layout (e.g., _header.scss)
│   │   ├── themes/        # Light/Dark teme
│   │   ├── main.scss      # Glavni SCSS fajl
│   │   ├── styles.scss    # Ulazna tačka za stilove
│   │
│   │── public/            # Staticki assets (e.g., images, fonts)
│   │── environments/      # Okruženja (environment.ts, environment.prod.ts)
│
│── app.module.ts          # Glavni Angular modul
│── main.ts                # Ulazna tačka aplikacije
│── index.html             # Glavni HTML fajl
│── angular.json           # Angular konfiguracija
│── package.json           # Dependencies
